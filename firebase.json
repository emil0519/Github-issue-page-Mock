{
  "hosting": [
      {
          "target": "fire",
          "public": "build",
          "rewrites": [
              {
                  "source": "**",
                  "destination": "/index.html"
              }
          ],
          "ignore": ["firebase.json", "/.", "/node_modules/"]
      },
      {
          "target": "storybook",
          "public": "storybook-static",
          "rewrites": [
              {
                  "source": "**",
                  "destination": "/index.html"
              }
          ],
          "ignore": ["firebase.json", "/.", "/node_modules/"]
      }
  ]
}